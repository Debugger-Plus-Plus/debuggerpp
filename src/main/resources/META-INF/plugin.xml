<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>team57.debuggerpp</id>
    <name>Debugger++</name>
    <vendor email="example@example.com" url="https://www.example.com">Team 57</vendor>
    <description>Seamless integration for Slicer4J.</description>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <executor implementation="team57.debuggerpp.trace.TraceExecutor" />
        <programRunner implementation="team57.debuggerpp.trace.TraceRunner" />
    </extensions>
    <actions>
        <group>
            <add-to-group group-id="XDebugger.ToolWindow.TopToolbar" anchor="last"/>
            <separator/>
            <action
                    class="team57.debuggerpp.trace.SliceStepBackward"
                    text="Slice Step Backward"
                    icon="/icons/SliceStepBackward.svg"
                    description="Step to previous slice line">
            </action>
            <action
                    class="team57.debuggerpp.trace.SliceStepForward"
                    text="Slice Step Forward"
                icon="/icons/SliceStepForward.svg"
                    description="Step to next slice line">
            </action>
            <action
                    class="team57.debuggerpp.trace.SliceInfo"
                    text="Slice Information"
                    icon="/icons/SliceInfo.svg"
                    description="View program slice information">
            </action>
        </group>
    </actions>
</idea-plugin>